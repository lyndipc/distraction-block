{
  "manifest_version": 3,
  "name": "Distraction Block",
  "version": "1.0.1",
  "description": "A browser extension that helps you stay focused by blocking distracting websites",
  "icons": {
    "128": "icons/icon128.png",
    "256": "icons/icon256.png",
    "384": "icons/icon384.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "384": "icons/icon384.png"
    }
  },
  "permissions": ["storage", "webNavigation", "tabs"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "service-worker.js"
  },
  "author": "Lyndi Castrejon",
  "homepage_url": "https://github.com/lyndipc/distraction-block"
}
