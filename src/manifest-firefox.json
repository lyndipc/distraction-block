{
  "manifest_version": 3,
  "name": "Distraction Block",
  "version": "1.0.1",
  "description": "A browser extension that helps you stay focused by blocking distracting websites",
  "icons": {
    "1024": "icons/icon256.png",
    "1536": "icons/icon384.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "1536": "icons/icon384.png"
    }
  },
  "permissions": ["storage", "webNavigation", "tabs"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "scripts": ["browser-polyfill.js", "background.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "distraction-block@lyndipc.github.io",
      "strict_min_version": "109.0"
    }
  },
  "author": "Lyndi Castrejon",
  "homepage_url": "https://github.com/lyndipc/distraction-block"
}
